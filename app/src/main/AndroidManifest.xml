<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".repository.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeApplication"
        tools:targetApi="31" >
        <activity
            android:name=".tools.DialogBoxActivity"
            android:exported="false"
            android:label="@string/title_activity_dialog_box"
            android:theme="@style/Theme.ComposeApplication" />
        <activity
            android:name=".tools.TabLayoutWithViewPagerActivity"
            android:exported="false"
            android:label="@string/title_activity_tab_layout_with_view_pager"
            android:theme="@style/Theme.ComposeApplication" />
        <activity
            android:name=".tools.ViewPagerActivity"
            android:exported="false"
            android:label="@string/title_activity_view_pager"
            android:theme="@style/Theme.ComposeApplication" />
        <activity
            android:name=".tools.TabLayoutActivity"
            android:exported="false"
            android:label="@string/title_activity_tab_layout"
            android:theme="@style/Theme.ComposeApplication" />
        <activity
            android:name=".tools.DrawerMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_top_app_barActivity"
            android:theme="@style/Theme.ComposeApplication" />
        <activity
            android:name=".bottomAppBar.BottomAppBarActivity"
            android:exported="false"
            android:label="@string/title_activity_buttom_bar"
            android:theme="@style/Theme.ComposeApplication" />
        <activity
            android:name=".home.HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.ComposeApplication" />
        <activity
            android:name=".splash.SplashScreenActivity"
            android:exported="true"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.ComposeApplication" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".logIn.LogInActivity"
            android:exported="true"
            android:label="@string/title_activity_log_in"
            android:theme="@style/Theme.ComposeApplication" />
        <activity
            android:name=".checkerTaskList.CheckerTaskList"
            android:exported="true"
            android:label="@string/title_activity_log_in"
            android:theme="@style/Theme.ComposeApplication" />
    </application>

</manifest>